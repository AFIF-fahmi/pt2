{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public/build"
            }
        },
        {
            "src": "api/**/*.php",
            "use": "@vercel/php"
        }
    ],
    "routes": [
        { "src": "/build/(.*)", "dest": "/build/$1" },
        {
            "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|json|map))",
            "dest": "/$1"
        },
        { "src": "/api/(.*)", "dest": "/api/$1" },
        { "src": "/(.*)", "dest": "/api/index.php" }
    ],
    "env": {
        "APP_NAME": "Laravel",
        "APP_ENV": "production",
        "APP_KEY": "base64:TGaVaXwhWgjn9akhE4SCSIjGG/cQqvICUQ+PgLA3Bs0=",
        "APP_DEBUG": "false",
        "APP_URL": "https://yourproductionurl.com",

        "LOG_CHANNEL": "stderr",
        "LOG_LEVEL": "debug",

        "DB_CONNECTION": "mysql",
        "DB_HOST": "4gg.h.filess.io",
        "DB_PORT": "3306",
        "DB_DATABASE": "db2024_stormtorn",
        "DB_USERNAME": "db2024_stormtorn",
        "DB_PASSWORD": "your_password",

        "BROADCAST_DRIVER": "log",
        "CACHE_DRIVER": "file",
        "QUEUE_CONNECTION": "sync",
        "SESSION_DRIVER": "file",
        "SESSION_LIFETIME": "120"
    }
}
